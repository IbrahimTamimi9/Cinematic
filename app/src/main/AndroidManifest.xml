<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.aaronoe.cinematic">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="de.aaronoe.cinematic.PopularMoviesApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="de.aaronoe.cinematic.DetailPage.DetailActivity"
            android:parentActivityName="de.aaronoe.cinematic.ui.NavigationActivity"
            android:theme="@style/AppThemeWithActionbar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.aaronoe.cinematic.ui.NavigationActivity" />
        </activity>

        <activity
            android:name="de.aaronoe.cinematic.ui.Search.SearchMoviesActivity"
            android:parentActivityName="de.aaronoe.cinematic.ui.NavigationActivity"
            android:theme="@style/AppThemeWithActionbar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.aaronoe.cinematic.ui.NavigationActivity" />
        </activity>
        <activity
            android:name="de.aaronoe.cinematic.DetailPage.ActorDetails.ActorDetailsActivity"
            android:parentActivityName="de.aaronoe.cinematic.DetailPage.DetailActivity"
            android:theme="@style/AppThemeWithActionbar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.aaronoe.cinematic.DetailPage.DetailActivity" />
        </activity>
        <activity
            android:name="de.aaronoe.cinematic.ui.NavigationActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <meta-data
                android:name="android.app.shortcuts"
                android:resource="@xml/shortcuts" />
        </activity>


        <provider
            android:name="de.aaronoe.cinematic.Database.MoviesContentProvider"
            android:authorities="de.aaronoe.cinematic"
            android:exported="false" />

        <service
            android:name="de.aaronoe.cinematic.Database.MovieUpdateService"
            android:exported="false" />

        <activity
            android:name="de.aaronoe.cinematic.ui.TvShowDetailActivity"
            android:parentActivityName="de.aaronoe.cinematic.ui.NavigationActivity"
            android:theme="@style/AppThemeWithActionbar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.aaronoe.cinematic.ui.NavigationActivity" />
        </activity>
        <activity
            android:name="de.aaronoe.cinematic.ui.TvSeasonDetailActivity"
            android:parentActivityName="de.aaronoe.cinematic.ui.NavigationActivity"
            android:theme="@style/AppThemeWithActionbar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.aaronoe.cinematic.ui.NavigationActivity" />
        </activity>
        <activity
            android:name="de.aaronoe.cinematic.ui.FavoritesActivity"
            android:parentActivityName="de.aaronoe.cinematic.ui.NavigationActivity"
            android:theme="@style/AppThemeWithActionbar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.aaronoe.cinematic.ui.NavigationActivity" />
        </activity>
        <activity android:name="de.aaronoe.cinematic.ui.AboutActivity"
            android:parentActivityName="de.aaronoe.cinematic.ui.NavigationActivity"
            android:theme="@style/AppThemeWithActionbar">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.aaronoe.cinematic.ui.NavigationActivity" />

        </activity>
    </application>

</manifest>
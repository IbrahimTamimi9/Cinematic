<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.aaronoe.cinematic.ui.AboutActivity">

    <ImageView
        android:src="@drawable/ic_movie_filter_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:id="@+id/imageView7" />

    <TextView
        android:text="@string/cinematic"
        android:textSize="26sp"
        android:textColor="@color/primary_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_vertical_padding"
        app:layout_constraintTop_toBottomOf="@+id/imageView7"
        app:layout_constraintLeft_toLeftOf="@+id/imageView7"
        app:layout_constraintRight_toRightOf="@+id/imageView7"
        android:id="@+id/textView2" />

    <TextView
        android:id="@+id/version_tv"
        android:text="@string/version_0_1_beta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/secondary_text"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintLeft_toLeftOf="@+id/textView2"
        app:layout_constraintRight_toRightOf="@+id/textView2" />

    <View
        app:layout_constraintTop_toBottomOf="@+id/version_tv"
        android:layout_width="0dp"
        android:layout_height="0.1dp"
        android:background="@color/secondary_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        android:id="@+id/divider1" />

    <ImageView
        android:src="@drawable/credits_developer_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/imageView8"
        app:layout_constraintTop_toTopOf="@+id/textView9"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView10"
        android:layout_marginBottom="8dp" />

    <TextView
        android:text="Developer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toRightOf="@+id/imageView8"
        android:id="@+id/textView9"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/divider1" />

    <TextView
        android:text="Aaron Oertel"
        android:textColor="@color/secondary_text"
        android:textSize="12sp"
        android:paddingRight="96dp"
        android:paddingEnd="96dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        app:layout_constraintLeft_toLeftOf="@+id/textView9"
        android:id="@+id/textView10" />

    <View
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        android:layout_width="0dp"
        android:layout_height="0.1dp"
        android:background="@color/secondary_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        android:id="@+id/divider2" />

    <ImageView
        android:src="@drawable/ic_tmdb_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/imageView9"
        app:layout_constraintTop_toTopOf="@+id/textView11"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView12"
         />

    <TextView
        android:text="The Movie Database"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/divider2"
        android:id="@+id/textView11"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@+id/imageView9"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp" />

    <TextView
        android:text="This app uses the TMDb API as a data source, but is not endorsed or certified by TMDb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="96dp"
        android:paddingEnd="96dp"
        android:textColor="@color/secondary_text"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        app:layout_constraintLeft_toLeftOf="@+id/textView11"
        android:id="@+id/textView12" />

    <View
        app:layout_constraintTop_toBottomOf="@+id/textView12"
        android:layout_width="0dp"
        android:layout_height="0.1dp"
        android:background="@color/secondary_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        android:id="@+id/divider3" />

    <TextView
        android:text="Copyright"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/divider3"
        app:layout_constraintLeft_toRightOf="@+id/imageView10"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:id="@+id/textView13" />

    <ImageView
        android:src="@drawable/credits_copyright_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/imageView10"
        app:layout_constraintTop_toTopOf="@+id/textView13"
        app:layout_constraintBottom_toBottomOf="@+id/textView14"
         />

    <TextView
        android:text="All copyrights belong to their respective owners"
        android:layout_width="wrap_content"
        android:textColor="@color/secondary_text"
        android:textSize="12sp"
        android:layout_height="wrap_content"
        android:paddingRight="96dp"
        android:paddingEnd="96dp"
        app:layout_constraintTop_toBottomOf="@+id/textView13"
        app:layout_constraintLeft_toLeftOf="@+id/textView13"
        android:id="@+id/textView14" />

    <View
        app:layout_constraintTop_toBottomOf="@+id/textView14"
        android:layout_width="0dp"
        android:layout_height="0.1dp"
        android:background="@color/secondary_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        android:id="@+id/divider4" />

</android.support.constraint.ConstraintLayout>
</ScrollView>
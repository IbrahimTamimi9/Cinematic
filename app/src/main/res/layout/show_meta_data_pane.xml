<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:src="@drawable/show_last_episode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/textView"
        app:layout_constraintBottom_toBottomOf="@+id/show_runtime_status"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:text="@string/status"
        android:textSize="16sp"
        android:textColor="@color/primary_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toRightOf="@+id/imageView"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp" />

    <TextView
        android:id="@+id/show_runtime_status"
        tools:text="Returning Series"
        android:textSize="14sp"
        android:textColor="@color/secondary_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintLeft_toLeftOf="@+id/textView" />

    <ImageView
        android:src="@drawable/show_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/textView3"
        app:layout_constraintBottom_toBottomOf="@+id/show_runtime_last_air_date"
        app:layout_constraintLeft_toLeftOf="@+id/imageView"
        android:id="@+id/imageView2"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp" />

    <TextView
        android:text="@string/last_air_date"
        android:textSize="16sp"
        android:textColor="@color/primary_text"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/show_runtime_status"
        android:id="@+id/textView3"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/divider1" />

    <ImageView
        android:src="@drawable/first_episode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/textView4"
        app:layout_constraintBottom_toBottomOf="@+id/show_runtime_first_air_date"
        android:id="@+id/imageView3" />

    <TextView
        android:id="@+id/show_runtime_last_air_date"
        tools:text="Mar 13, 2017"
        android:textSize="14sp"
        android:textColor="@color/secondary_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintLeft_toLeftOf="@+id/textView3" />

    <TextView
        android:text="@string/first_air_date"
        app:layout_constraintTop_toBottomOf="@+id/divider2"
        android:textSize="16sp"
        android:textColor="@color/primary_text"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/show_runtime_last_air_date"
        android:id="@+id/textView4" />

    <TextView
        android:id="@+id/show_runtime_first_air_date"
        tools:text="Nov 13, 2005"
        android:textSize="14sp"
        android:textColor="@color/secondary_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintLeft_toLeftOf="@+id/textView4" />

    <ImageView
        android:src="@drawable/runtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/textView5"
        app:layout_constraintLeft_toLeftOf="@+id/imageView3"
        app:layout_constraintBottom_toBottomOf="@+id/show_runtime_minutes"
        android:id="@+id/imageView4" />

    <TextView
        app:layout_constraintTop_toBottomOf="@+id/divider3"
        android:text="@string/runtime"
        android:textSize="16sp"
        android:textColor="@color/primary_text"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/show_runtime_first_air_date"
        android:id="@+id/textView5" />

    <TextView
        android:id="@+id/show_runtime_minutes"
        tools:text="45 Minutes"
        android:textSize="14sp"
        android:textColor="@color/secondary_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintLeft_toLeftOf="@+id/textView5" />

    <View
        app:layout_constraintTop_toBottomOf="@+id/show_runtime_status"
        android:layout_width="0dp"
        android:layout_height="0.2dp"
        android:background="#d2d1d1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        android:id="@+id/divider1" />

    <View
        app:layout_constraintTop_toBottomOf="@+id/show_runtime_last_air_date"
        android:layout_width="0dp"
        android:layout_height="0.2dp"
        android:background="#d2d1d1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        android:id="@+id/divider2" />

    <View
        app:layout_constraintTop_toBottomOf="@+id/show_runtime_first_air_date"
        android:layout_width="0dp"
        android:layout_height="0.2dp"
        android:background="#d2d1d1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        android:id="@+id/divider3" />

    <View
        app:layout_constraintTop_toBottomOf="@+id/show_runtime_minutes"
        android:layout_width="0dp"
        android:layout_height="0.2dp"
        android:background="#d2d1d1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        android:id="@+id/divider4" />

    <TextView
        app:layout_constraintTop_toBottomOf="@id/divider4"
        android:text="@string/genres"
        android:textSize="16sp"
        android:textColor="@color/primary_text"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/show_runtime_minutes"
        android:id="@+id/textView6" />

    <TextView
        android:id="@+id/show_runtime_genres"
        tools:text="Drama, Mystery"
        android:textSize="14sp"
        android:textColor="@color/secondary_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:layout_constraintLeft_toLeftOf="@+id/textView6" />

    <ImageView
        android:src="@drawable/show_ic_label_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/textView6"
        app:layout_constraintLeft_toLeftOf="@+id/imageView4"
        app:layout_constraintBottom_toBottomOf="@+id/show_runtime_genres"
        android:id="@+id/imageView5" />

    <View
        app:layout_constraintTop_toBottomOf="@+id/show_runtime_genres"
        android:layout_width="0dp"
        android:layout_height="0.2dp"
        android:background="#d2d1d1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        android:id="@+id/divider5" />

    <TextView
        app:layout_constraintTop_toBottomOf="@id/divider5"
        android:text="@string/number_of_seasons"
        android:textSize="16sp"
        android:textColor="@color/primary_text"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/show_runtime_genres"
        android:id="@+id/textView7" />

    <TextView
        android:id="@+id/show_runtime_nr_seasons"
        tools:text="12"
        android:textSize="14sp"
        android:textColor="@color/secondary_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:layout_constraintLeft_toLeftOf="@+id/textView7" />

    <ImageView
        android:src="@drawable/show_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/textView7"
        app:layout_constraintBottom_toBottomOf="@+id/show_runtime_nr_seasons"
        app:layout_constraintLeft_toLeftOf="@+id/imageView5"
        android:id="@+id/imageView6" />

    <View
        app:layout_constraintTop_toBottomOf="@+id/show_runtime_nr_seasons"
        android:layout_width="0dp"
        android:layout_height="0.2dp"
        android:background="#d2d1d1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        android:id="@+id/divider6" />

    <TextView
        android:text="@string/number_of_episodes"
        android:textSize="16sp"
        android:textColor="@color/primary_text"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/divider6"
        app:layout_constraintLeft_toLeftOf="@+id/show_runtime_nr_seasons"
        android:id="@+id/textView8" />

    <TextView
        android:id="@+id/show_runtime_nr_episodes"
        tools:text="258"
        android:textSize="14sp"
        android:layout_marginBottom="16dp"
        android:textColor="@color/secondary_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        app:layout_constraintLeft_toLeftOf="@+id/textView8" />

    <ImageView
        android:src="@drawable/show_number2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/textView8"
        app:layout_constraintBottom_toBottomOf="@+id/show_runtime_nr_episodes"
        app:layout_constraintLeft_toLeftOf="@+id/imageView6" />

</android.support.constraint.ConstraintLayout>